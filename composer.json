{
    "name": "hexlet/code",
    "description": "Generate diff",
    "license": "MIT",
    "scripts": {
        "test": "phpunit tests"
    },
    "autoload": {
        "psr-4": {
            "Hexlet\\Code\\": "src/"
        },
        "files": [
            "src/Cli.php",
            "src/Differ.php",
            "src/Formatter.php",
            "src/Parsers.php",
            "src/Formatters/stylish.php",
            "src/Formatters/plain.php",
            "src/Formatters/json.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Hexlet\\Code\\Tests\\": "tests"
        }
    },
    "bin": [
        "bin/gendiff"
    ],
    "require": {
        "docopt/docopt": "^1.0",
        "lstrojny/functional-php": "^1.17",
        "symfony/yaml": "^7.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.8",
        "phpunit/phpunit": "^9.5"
    }
}
